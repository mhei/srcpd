dnl Process this file with autoconf to produce a configure script.
AC_INIT(srcpd.c)
AM_INIT_AUTOMAKE(srcpd, 2.0)

AC_PREFIX_DEFAULT(/usr/local) 

AC_CONFIG_HEADER(config.h)
dnl AM_CONFIG_HEADER(config.h)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_CPP
AC_PROG_CXX
AC_PROG_INSTALL

dnl Checks for libraries.

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(fcntl.h malloc.h syslog.h unistd.h)
AC_DEFINE_UNQUOTED(VERSION, "$VERSION")

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_C_INLINE

AC_MSG_CHECKING("which type of build")
AC_ARG_ENABLE(debug,
 [  --enable-debug             enable debug mode [default=no]],
 enable_debug=$enableval, enable_debug=no)
if test $enable_debug = yes; then
   CFLAGS="-g -Wall"
   CXXFLAGS="-g -Wall"
   AC_MSG_RESULT(debug)
else
   CFLAGS="-O2 -Wall"
   CXXFLAGS="-O2 -Wall"
   AC_MSG_RESULT(release)
fi

CXXFLAGS="$CXXFLAGS"

dnl Checks for library functions.
AC_FUNC_MEMCMP
AC_CHECK_HEADERS(errno.h pthread.h pwd.h sys/time.h signal.h termios.h)
AM_PATH_XML2(2.4.0, HAVE_XML2=yes, )

CFLAGS="${CFLAGS} ${XML_CFLAGS}"
LIBS="${LIBS} ${XML_LIBS}"

AC_C_CONST
AC_TYPE_PID_T
AC_HEADER_TIME
AC_TYPE_SIGNAL
AC_CHECK_FUNCS(gettimeofday socket)

AC_OUTPUT(Makefile)

